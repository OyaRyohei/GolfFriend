<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>プロフィール編集</h2>
    <%= render "public/shared/error_messages", resource: @user %>
    <%= form_with model: @user, local:true do |f| %>
      <table>
        <tbody>
          <tr>
            <td><%= f.label :"ユーザー名" %></td>
            <td><%= f.text_field :name, placeholder: "ゴルフ君", style: "margin-left:40px;" %></td>
          </tr>

          <tr>
            <td><%= f.label :"性別" %></td>
            <td><%= f.label :gender, User.genders_i18n[:man], style: "margin-left:40px;" %>
                <%= f.radio_button :gender, User.genders.key(0), checked: "checked" %>
                <%= f.label :gender, User.genders_i18n[:woman] %>
                <%= f.radio_button :gender, User.genders.key(1) %>
            </td>
          </tr>

          <tr>
            <td><%= f.label :"年齢" %></td>
           <td><%= f.select :age, {"10代": 10, "20代": 20, "30代": 30, "40代": 40, "50代": 50, "60代": 60, "70代": 70, "80代": 80 }, {}, style: "margin-left:40px;" %></td>
          </tr>

          <tr>
            <td><%= f.label :"都道府県" %></td>
            <td><%= f.select :area, User.areas.keys, {}, style: "margin-left:40px;" %></td>
          </tr>
        </tbody>
      </table>
      <div class="form-group">
        <%= f.label :"プロフィール画像" %>
        <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :"自己紹介文" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存する", class: 'btn btn-success' %>
      </div>
      <div class="field">
       <%= link_to "退会する", unsubscribe_users_path, class: "btn btn-danger" %></td>
      </div>

    <% end %>
  </div>
</div>
