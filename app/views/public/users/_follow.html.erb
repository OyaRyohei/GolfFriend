<% if current_user != user && current_user.name != "guestuser" %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), remote: true, method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), remote: true, method: :post %>
  <% end %>
<% end %>