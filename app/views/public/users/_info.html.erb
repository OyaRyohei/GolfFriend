<table class='table'>
  <tr>
    <% if user.image.attached? %>
      <%= image_tag user.image, size: "100x100" %>
    <% else %>
      <%= image_tag asset_path('no_image.jpeg'), size: "100x100" %>
    <% end %>
  </tr>
  <tr>
	  <th>ユーザー名</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
    <th>フォロー中</th>
    <th><%= link_to user.followings.count, user_followings_path(user.id) %></th>
  </tr>
  <tr>
    <th>フォロワー</th>
    <th><%= link_to user.followers.count, user_followers_path(user.id) %></th>
  </tr>
</table>

<tr>
  <td><%= user.introduction %></td>
</tr>

<div class='row'>
  <% unless user == current_user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-outline-secondary btn-block", method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-outline-secondary btn-block", method: :post %>
    <% end %>
  <% end %>
</div>

<div class='row'>
<% if current_user != user && current_user.name != "guestuser" %>
  <%= link_to 'チャットを開始する', chat_room_path(chat_room.id) %>
<% end %>
</div>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>