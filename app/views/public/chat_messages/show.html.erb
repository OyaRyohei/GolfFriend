<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h2>CHAT WITH <%= @user.name %></h2>

      <div id="chat_users">
        <div id="current_user">
        </div>
        <div id="aite_user">
        </div>
      </div>

      <div id="chat_list" class="table">
        <%= render "chat_list", messages: @chat_messages%>
      </div>

      <table class="message table">
        <thead>
          <tr>
            <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
            <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
          </tr>
        </thead>
        <% @chat_messages.each do |chat| %>
          <% if chat.user_id == current_user.id %>
          <tbody>
            <tr>
              <th>
                <p style="text-align: left;"><%= chat.body %></p>
              </th>
              <th></th>
            </tr>
          <% else %>
            <tr>
              <th></th>
              <th>
                <p style="text-align: right;"><%= chat.body %></p>
              </th>
            </tr>
          </tbody>
          <% end %>
        <% end %>
      </table>

      <%= form_with model: @chat_message, local: false do |f| %>
        <%= f.text_field :body %>
        <%= f.hidden_field :chat_room_id %>
        <%= f.submit "SEND", class:"btn btn-sm btn-success chat-btn" %>
      <% end %>
    </div>
  </div>
</div>