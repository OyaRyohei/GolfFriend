<div class="container">
  <div class="row">
    <div class='col-md-8'>
      <div class="d-inline-block px-3 m-3" style="background-color: #eee;">
        <h3 class="m-0">
          <%= @user.name %>さんの会員詳細
        </h3>
      </div>

      <table class="table table-borderless">
      <tr>
        <td>会員ID</td>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <td>ユーザー名</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>性別</td>
        <td><%= @user.gender_i18n %></td>
      </tr>
       <tr>
        <td>年齢</td>
        <td><%= @user.age %>代</td>
      </tr>
      <tr>
        <td>都道府県</td>
        <td><%= @user.area %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td colspan='2'>
          <% if @user.is_deleted == true %>
          <div class="text-secondary font-weight-bold">退会</div>
          <% else %>
          <div class="text-success font-weight-bold">有効</div>
          <% end %>
          </td>
      </tr>
        <tfoot>
          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_user_path,class: "btn btn-success" %></td>
          </tr>
        </tfoot>
    </table>
  </div>
 </div>
</div>