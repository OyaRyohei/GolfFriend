<div class="container">
  <div class="d-inline-block px-3 m-3 mb-4 border border-dark rounded">
    <h4 class="m-0"><strong>お知らせ一覧</strong></h4>
  </div>

  <div class="row">
    <div class="container text-center">
      <% @news.each do |news| %>
        <table class='table table-borderless border-bottom m-0'>
          <tr>
            <td width="100px" align="left"><%= news.list %></td>
            <td width="300px" align="left"><%= link_to news.title, admin_news_path(news) %></td>
            <td><%= news.created_at.to_s(:datetime_jp) %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
